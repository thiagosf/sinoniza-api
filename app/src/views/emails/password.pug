extends ../layouts/email.pug

block content
  h1(style='margin: 0 0 20px 0; padding: 0 0 5px 0;border-bottom: 2px solid #FDD835; font-size: 30px; font-weight: 300;')!= title
  p(style='margin: 0 0 20px 0;')!= __('Hello %s', name)
  p(style='margin: 0 0 20px 0;')!= __('To create a new password, click the link below:')
  p(style='margin: 0 0 20px 0;')
    a(href=link)!= link
  p(style='margin: 0 0 20px 0;')!= __('If you have not asked for this, please rest assured that your password remains the same.')
